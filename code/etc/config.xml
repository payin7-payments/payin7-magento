<?xml version="1.0"?>
<config>
    <modules>
        <Payin7_Payments>
            <version>1.0.0</version>
        </Payin7_Payments>
    </modules>

    <adminhtml>
        <layout>
            <updates>
                <payin7payments>
                    <file>payin7payments.xml</file>
                </payin7payments>
            </updates>
        </layout>
        <translate>
            <modules>
                <Payin7_Payments>
                    <files>
                        <default>Payin7_Payments.csv</default>
                    </files>
                </Payin7_Payments>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        <routers>
            <payin7payments>
                <use>standard</use>
                <args>
                    <module>Payin7_Payments</module>
                    <frontName>payin7</frontName>
                </args>
            </payin7payments>
        </routers>
        <layout>
            <updates>
                <payin7payments>
                    <file>payin7payments.xml</file>
                </payin7payments>
            </updates>
        </layout>
        <translate>
            <modules>
                <Payin7_Payments>
                    <files>
                        <default>Payin7_Payments.csv</default>
                    </files>
                </Payin7_Payments>
            </modules>
        </translate>
    </frontend>

    <global>

        <blocks>
            <payin7payments>
                <class>Payin7_Payments_Block</class>
            </payin7payments>
            <adminhtml>
                <rewrite>
                    <sales_order_payment>Payin7_Payments_Block_Adminhtml_Sales_Order_Payment</sales_order_payment>
                </rewrite>
            </adminhtml>
        </blocks>

        <helpers>
            <payin7payments>
                <class>Payin7_Payments_Helper</class>
            </payin7payments>
        </helpers>

        <models>
            <payin7payments>
                <class>Payin7_Payments_Model</class>
                <resourceModel>payin7payments_mysql4</resourceModel>
            </payin7payments>
            <payin7payments_mysql4>
                <class>Payin7_Payments_Model_Mysql4</class>
                <entities>
                    <payin7data>
                        <table>payin7_data</table>
                    </payin7data>
                    <payin7orderhistory>
                        <table>payin7_order_history</table>
                    </payin7orderhistory>
                </entities>
            </payin7payments_mysql4>
        </models>

        <resources>
            <payin7payments_setup>
                <setup>
                    <module>Payin7_Payments</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </payin7payments_setup>
            <payin7payments_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </payin7payments_write>
            <payin7payments_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </payin7payments_read>
        </resources>

        <events>
            <controller_front_init_before>
                <observers>
                    <controller_front_init_before_observer>
                        <type>singleton</type>
                        <class>Payin7_Payments_Model_Observer</class>
                        <method>beforeControllerFrontInit</method>
                    </controller_front_init_before_observer>
                </observers>
            </controller_front_init_before>
            <sales_order_save_before>
                <observers>
                    <sales_order_save_before_observer>
                        <type>singleton</type>
                        <class>Payin7_Payments_Model_Observer</class>
                        <method>salesOrderSaveBefore</method>
                    </sales_order_save_before_observer>
                </observers>
            </sales_order_save_before>
            <sales_order_save_after>
                <observers>
                    <sales_order_save_after_observer>
                        <type>singleton</type>
                        <class>Payin7_Payments_Model_Observer</class>
                        <method>salesOrderSaveAfter</method>
                    </sales_order_save_after_observer>
                </observers>
            </sales_order_save_after>
            <sales_order_shipment_save_after>
                <observers>
                    <sales_order_shipment_save_after_observer>
                        <type>singleton</type>
                        <class>Payin7_Payments_Model_Observer</class>
                        <method>salesOrderShipmentSaveAfter</method>
                    </sales_order_shipment_save_after_observer>
                </observers>
            </sales_order_shipment_save_after>
            <sales_order_invoice_save_after>
                <observers>
                    <sales_order_invoice_save_after_observer>
                        <type>singleton</type>
                        <class>Payin7_Payments_Model_Observer</class>
                        <method>salesOrderInvoiceSaveAfter</method>
                    </sales_order_invoice_save_after_observer>
                </observers>
            </sales_order_invoice_save_after>
            <sales_order_creditmemo_save_after>
                <observers>
                    <sales_order_creditmemo_save_after_observer>
                        <type>singleton</type>
                        <class>Payin7_Payments_Model_Observer</class>
                        <method>salesOrderCreditmemoSaveAfter</method>
                    </sales_order_creditmemo_save_after_observer>
                </observers>
            </sales_order_creditmemo_save_after>
        </events>
    </global>

    <crontab>
        <jobs>
            <payin7_payments_send_pending_order_history>
                <schedule>
                    <cron_expr>*/15 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>payin7payments/remote_order_history::sendPendingOrderHistory</model>
                </run>
            </payin7_payments_send_pending_order_history>
        </jobs>
    </crontab>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <payin7payments>
                                            <title>Payin7 Payments Configuration</title>
                                        </payin7payments>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <payin7payments>
            <integration>
                <server_hostname>payin7.com</server_hostname>
                <use_secure_connection>1</use_secure_connection>
                <api_version>v1</api_version>
            </integration>
        </payin7payments>
        <payment>
            <payin7payment7days>
                <active>1</active>
                <model>payin7payments/payin7daysPaymentMethod</model>
                <title>PAYIN7 / Pay in 7 days</title>
                <sort_order>-15000</sort_order>
                <payment_action>order</payment_action>
                <order_status>payin7_pending</order_status>
            </payin7payment7days>
            <payin7paymentinstallments>
                <active>1</active>
                <title>PAYIN7 / Pay with monthly installments</title>
                <model>payin7payments/monthlyInstallmentsPaymentMethod</model>
                <sort_order>-15000</sort_order>
                <payment_action>order</payment_action>
                <order_status>payin7_pending</order_status>
            </payin7paymentinstallments>
        </payment>
    </default>
</config>
